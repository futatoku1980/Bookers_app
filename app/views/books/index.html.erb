<div class="main-box">
<p class="flash"><%= flash[:notice] %></p>
<h1 class="title">Books</h1>
<table>
<tr>
<th>Title</th>
 <th>Body</th></tr>
<% @books.each do |book| %>
<tr>
 <td class="text"><%= book.title %></td>
  <td><%= book.body %></td>
 <td class="text"> <%= link_to "Show","/books/#{book.id}" %>
  <%= link_to "Edit",edit_book_path(book.id) %>
  <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td></tr><br>
 <% end %></table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @book do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
  <%= f.text_area :body %><br>

<%= f.submit "Create Book" %>
<% end %>
</div>